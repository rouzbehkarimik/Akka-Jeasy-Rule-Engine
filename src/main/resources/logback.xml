<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ALL -->
<configuration debug="true" scan="true" scanPeriod="1 minute">

    <property name="APPLICATION_LEVEL" value="INFO"/>
    <property name="STACK_TRACE_LEVEL_COUNT" value="15"/>
    <!--<contextListener package="ir.techstorm.ruleengine"/>-->
    <property name="PATTERN" scope="context" value="%-15([%level]) [Date]:%date{yyyy-MM-dd'T'HH:mm:ss.SSS} [thread]:%thread %logger{30}.%method@%line:\t%message%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>



    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
    </appender>

    <logger name="ir.techstorm.ruleengine.example" additivity="true">
        <level value="${APPLICATION_LEVEL}"/>
    </logger>


    <logger name="org.aspectj" additivity="true">
        <level value="INFO"/>
    </logger>

    <root>
        <level value="${APPLICATION_LEVEL}"/>
        <!--<appender-ref ref="CONSOLE"/>-->
        <appender-ref ref="ASYNC_CONSOLE"/>
        <!--<appender-ref ref="FILE"/>-->
    </root>
</configuration>